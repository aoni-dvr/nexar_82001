<?xml version="1.0"?>
<module name="devc-ambarella">
  <classification>Driver</classification>
  <description>
    <short>Serial driver for ambarella compatible uarts</short>
    <abstract><![CDATA[
                        The devc-ambarella manager is a small serial device manager for AMBA platform.
                ]]></abstract>
  </description>
  <supports>
    <availability>
      <cpu isa="aarch64">
        <byteOrder>le</byteOrder>
      </cpu>
    </availability>
  </supports>
  <contents>
    <component id="ambarella" generated="true">
      <location basedir="aarch64/le">devc-ambarella</location>
    </component>
  </contents>
  <requires>
    <part build="true" location="lib/io-char"/>
    <part build="false" location="hardware/devc"/>
  </requires>
</module>
