<?xml version="1.0"?>
<module name="otp-ambarella">
    <type>Element</type>
    <classification>Driver</classification>

    <description>
            <short>ambarella otp Driver</short>
            <abstract>
                    <![CDATA[The otp driver for the Ambarella BSP.]]>
            </abstract>
    </description>

    <supports>
        <availability>
            <cpu isa="aarch64">
            <byteOrder>le</byteOrder>
            </cpu>
        </availability>
    </supports>

    <source available="false">
        <location type="">.</location>
    </source>
    <GroupOwner>hw</GroupOwner>

    <contents>
        <component id="ambarella" generated="true">
            <location basedir="{cpu}/{endian}"
                runtime="true">otp-ambarella</location>
        </component>
    </contents>

    <requires>
        <part build="false" location="lib/otp"/>
    </requires>

</module>
